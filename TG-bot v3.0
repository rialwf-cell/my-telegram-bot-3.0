    except Exception as e:
        # –ï—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å –≤ –ª–∏—á–∫—É (–Ω–∞–ø—Ä–∏–º–µ—Ä, –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –ø–∏—Å–∞–ª –±–æ—Ç—É), –ø—Ä–æ—Å—Ç–æ –ª–æ–≥–∏—Ä—É–µ–º
        logger.warning(f"–ù–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ –ª–∏—á–∫—É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é {user.id}: {e}")
        await context.bot.send_message(
            chat_id=update.effective_chat.id,
            text=f"–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –Ω–∞—á–Ω–∏—Ç–µ –¥–∏–∞–ª–æ–≥ —Å –±–æ—Ç–æ–º @{bot_username} –∏ –æ—Ç–ø—Ä–∞–≤—å—Ç–µ –∫–æ–º–∞–Ω–¥—É /start, —á—Ç–æ–±—ã –∏–≥—Ä–∞—Ç—å.",
            reply_to_message_id=query.message.message_id
        )

# --------------------------------------------------------------------------
# 16. –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
# --------------------------------------------------------------------------
async def main():
    # –°–æ–∑–¥–∞—ë–º –ø—É—Å—Ç—ã–µ —Ñ–∞–π–ª—ã –ø—Ä–∏ –ø–µ—Ä–≤–æ–º –∑–∞–ø—É—Å–∫–µ
    for path, default in [
        (STATS_FILE, load_stats()),
        (USERS_FILE, {}),
        (POSTS_FILE, {}),
        (MIRROR_MAP_FILE, {}),
    ]:
        if not os.path.exists(path):
            if isinstance(default, set):
                default = list(default)
            with open(path, "w", encoding="utf-8") as f:
                json.dump(default, f, ensure_ascii=False, indent=2)
    if not os.path.exists("images"):
        os.makedirs("images")
        print("üìÅ –°–æ–∑–¥–∞–Ω–∞ –ø–∞–ø–∫–∞ 'images'")

    # –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è promo_stats –ø–æ–¥ ¬´—á–∞—Ç–æ–≤—ã–µ¬ª –ø–æ–ª—è (—á—Ç–æ–±—ã —Ñ–∞–π–ª —Ç–æ—á–Ω–æ –∏–º –∏—Ö —Å–æ–¥–µ—Ä–∂–∞–ª)
    today = datetime.now().strftime("%Y-%m-%d")
    stats = load_json(PROMO_STATS_FILE, {})
    if stats.get("chat_last_date") != today:
        stats["chat_last_date"] = today
        stats["chat_comments_count"] = 0
        stats["chat_dropped_today"] = False
        save_json(PROMO_STATS_FILE, stats)


    # –í–∞–∂–Ω–æ: –¥–ª—è —Ä–∞–±–æ—Ç—ã JobQueue –ø—Ä–æ—Å—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ–º Application.builder().token(...).build()
    # –ï—Å–ª–∏ PTB —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω —Å job-queue, JobQueue –±—É–¥–µ—Ç –¥–æ—Å—Ç—É–ø–µ–Ω –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏
    app = Application.builder().token(BOT_TOKEN).build()

    # ===== –ù–ê–°–¢–†–û–ô–ö–ê –ï–ñ–ï–î–ù–ï–í–ù–û–ì–û –°–ë–†–û–°–ê =====
    # –°–æ–∑–¥–∞–µ–º Job, –∫–æ—Ç–æ—Ä—ã–π –±—É–¥–µ—Ç –∑–∞–ø—É—Å–∫–∞—Ç—å—Å—è –∫–∞–∂–¥—ã–π –¥–µ–Ω—å –≤ 18:00 –ø–æ –ú–°–ö.
    # –í–∞–∂–Ω–æ: –±–æ—Ç –¥–æ–ª–∂–µ–Ω —Ä–∞–±–æ—Ç–∞—Ç—å 24/7, –∏–Ω–∞—á–µ –∑–∞–¥–∞—á–∞ –Ω–µ –≤—ã–ø–æ–ª–Ω–∏—Ç—Å—è.
    # –î–ª—è —Ä–∞–±–æ—Ç—ã —Å —á–∞—Å–æ–≤—ã–º–∏ –ø–æ—è—Å–∞–º–∏ —É–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π —á–∞—Å–æ–≤–æ–π –ø–æ—è—Å (Europe/Moscow),
    # –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ pytz/zoneinfo –¥–ª—è —Ç–æ—á–Ω–æ–π –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≤—Ä–µ–º–µ–Ω–∏.

    # –î–ª—è –ø–æ–¥–¥–µ—Ä–∂–∫–∏ –ø–ª–∞–Ω–∏—Ä–æ–≤—â–∏–∫–∞: pip install "python-telegram-bot[job-queue]"
    job_queue = app.job_queue
    if job_queue is None:
        logger.error("JobQueue –Ω–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –ø–∞–∫–µ—Ç: python-telegram-bot[job-queue]. –ü–ª–∞–Ω–∏—Ä–æ–≤—â–∏–∫ –∑–∞–¥–∞—á –Ω–µ –±—É–¥–µ—Ç —Ä–∞–±–æ—Ç–∞—Ç—å!")
        print("‚ùå JobQueue –Ω–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –ø–∞–∫–µ—Ç: pip install 'python-telegram-bot[job-queue]'")
        # –ù–µ –ø–∞–¥–∞–µ–º, –ø—Ä–æ—Å—Ç–æ –ø—Ä–æ–ø—É—Å–∫–∞–µ–º –ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á
    else:
        # –ó–∞–ø—É—Å–∫–∞–µ–º –∑–∞–¥–∞—á—É –∫–∞–∂–¥—ã–π –¥–µ–Ω—å –≤ 18:00. –í—Ä–µ–º—è —É–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –≤ —á–∞—Å–æ–≤–æ–º –ø–æ—è—Å–µ —Å–µ—Ä–≤–µ—Ä–∞.
        # –ï—Å–ª–∏ —Å–µ—Ä–≤–µ—Ä –≤ UTC, —Ç–æ 18:00 –ú–°–ö = 15:00 UTC.
        job_queue.run_daily(
            callback=reset_daily_labyrinth,
            time=dtime(hour=9, minute=5, second=0),  # –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –≤—ã–∑–æ–≤
            name="daily_labyrinth_reset"
        )
        logger.info("–ï–∂–µ–¥–Ω–µ–≤–Ω–∞—è –∑–∞–¥–∞—á–∞ —Å–±—Ä–æ—Å–∞ –ª–∞–±–∏—Ä–∏–Ω—Ç–∞ –∑–∞–ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–∞ –Ω–∞ 18:00 –ú–°–ö.")

    # ===== –†–∞–∑–≥–æ–≤–æ—Ä—ã: –æ–±—ä—è–≤–ª—è–µ–º –ü–ï–†–ï–î —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–µ–π =====
    # ... [–æ—Å—Ç–∞–ª—å–Ω–æ–π –∫–æ–¥ —Å labyrinth_conv, post_conv –∏ —Ç.–¥.] ...


    # ===== –•–µ–Ω–¥–ª–µ—Ä—ã –¥–ª—è –∫–∞–Ω–∞–ª–∞/–∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤ =====
    # ChannelPostHandler –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç –≤ PTB v20+, –∏—Å–ø–æ–ª—å–∑—É–µ–º MessageHandler —Å —Ñ–∏–ª—å—Ç—Ä–æ–º UpdateType.CHANNEL_POST
    # –ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã –æ–±–∞ –Ω—É–∂–Ω—ã—Ö —Ö–µ–Ω–¥–ª–µ—Ä–∞:
    app.add_handler(MessageHandler(filters.UpdateType.CHANNEL_POST, handle_channel_post), group=0)
    app.add_handler(MessageHandler(filters.Chat(COMMENTS_CHAT_ID), handle_chat_message), group=0)

    # --- –î–û–ë–ê–í–õ–Ø–ï–ú –ù–û–í–´–ô –•–ï–ù–î–õ–ï–† –î–õ–Ø –ö–ù–û–ü–ö–ò –í –ö–ê–ù–ê–õ–ï ---
    app.add_handler(CallbackQueryHandler(handle_start_from_post, pattern="^start_labyrinth_from_post$"), group=0)

    # –†–∞–∑–≥–æ–≤–æ—Ä—ã ‚Äî –¥–æ –æ–±—â–µ–≥–æ —Ç–µ–∫—Å—Ç–æ–≤–æ–≥–æ
    app.add_handler(labyrinth_conv, group=0)
    app.add_handler(post_conv, group=0)

    # –ö–æ–º–∞–Ω–¥—ã
    app.add_handler(CommandHandler("start", start), group=0)
    app.add_handler(CommandHandler("debug", debug_info), group=0)
    app.add_handler(CommandHandler("promo_chat_debug", promo_chat_debug), group=0)
    app.add_handler(CommandHandler("chat_id", chat_id_cmd), group=0)

    # –û–±—â–∏–π –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–∞
    app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message), group=0)

    # --- –ó–∞–ø—É—Å–∫ ---
    await app.initialize()
    await app.start()
    await app.updater.initialize()
    await app.updater.start_polling()
    print("ü§ñ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω!")

    try:
        await asyncio.Future()  # run forever
    except asyncio.CancelledError:
        pass
    finally:
        try:
            await app.updater.stop()
        except Exception:
            pass
        await app.stop()
        await app.shutdown()


if __name__ == "__main__":
    asyncio.run(main())
